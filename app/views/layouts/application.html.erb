<%= link_to "My Dashboard", welcome_dashboard_path %>


  <div align=right>Hello <%= current_user.first_name %></div>
<% end %>

  <% flash.each do |key, value| %>
    <p class<%= key %>><%= value %></p>
  <% end %>


<%= yield %>

</body>
</html>
