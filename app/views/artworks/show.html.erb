<div class="container-fluid">


  <div class="row">
    <div class="col-md-5">
      <br>

      <p class="text-right"><%= image_tag @artwork.art_image_1 %></p>
        <br>
      <% if @artwork.art_image_2? %>
        <p class="text-right"><%= image_tag @artwork.art_image_2%></p>
        <br>
      <% end %>
      <% if @artwork.art_image_3? %>
        <p style="float:right"><%= image_tag @artwork.art_image_3%></p>
      <% end %>


    </div>

    <div class="col-md-5">
      <div class="page-header">
        <h3>"<%= @artwork.title %>"<small> by <%= @artwork.user.first_name %> <%= @artwork.user.last_name %></small></h3>
          <div class="row">
            <div class="col-md-6">
              <h3><%= image_tag(@artwork.user.headshot.thumb.url) if @artwork.user.headshot? %></h3>
            </div>
            <div class="col-md-3 text-right">
              <h3><small> for (patient first name, patient last name)</small></h3>
            </div>
            <div class="col-md-3 text-right">
              <h3><small> (patient pic goes here) </small></h3>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <p>Size: <%= @artwork.size %></p>
              <p>Medium: <%= @artwork.medium %>   
              <p>Price: <%= number_to_currency(@artwork.price) %></p>
              <p>Description: <%= @artwork.summary%></p>

              
              <% if can? :update, @artwork %>
                <%= link_to "Edit Artwork", edit_patient_campaign_artwork_path %>
                <% end %><br>

              <% if can? :destroy, @patient_campaign, @artwork %>
                <%= link_to "Delete Artwork", [@patient_campaign, @artwork,] , method: :delete, confirm: 'Are you sure you want to delete this Patient Campaign?' %>
              <% end %>
            </div>
            <div class="col-md-6 text-right">
              <%= link_to (image_tag ('/assets/btn-buy.png')), [@patient_campaign, @artwork,], method: :buy%>
            </div>
          </div>

      </div>

    </div>






  </div>
</div>