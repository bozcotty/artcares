<div class="container-fluid">

<!-- artwork images -->
  <div class="row">
    <div class="col-md-7">
      <br>

      <p class="text-center"><%= image_tag @artwork.art_image_1 %></p>
        <br>
      <!-- refactor additional images later... -->
      <% if @artwork.art_image_2? %>
        <p class="text-center"><%= image_tag @artwork.art_image_2%></p>
        <br>
      <% end %>
      <% if @artwork.art_image_3? %>
        <p class="text-center"><%= image_tag @artwork.art_image_3%></p>
      <% end %>

    </div>

<!-- artwork info section -->
    <div class="col-md-5">
      
        <br>
        <!-- change the link to an artist view page, (to be made) -->
        <h3 class="copy-heading">"<%= @artwork.title %>"<small> by </small><%= link_to (@artwork.user.full_name), [@artwork.user], method: :get %></h3>
          <div class="row">
            <div class="col-md-2 text-left">
              <% if @artwork.user.headshot? %>
              <%= link_to image_tag(@artwork.user.headshot.thumb.url), [@artwork.user] %>
              <% end %>
            </div>
            <div class="col-md-6 text-right">
              <h4 class="copy-heading"><small> for</small> <%= link_to (@artwork.user.patient_campaign.full_name), [@artwork.patient_campaign], method: :get %> <small> > </small><br>

                (<%= @artwork.user.patient_campaign.patient_diagnosis %>)
              </h4>
            </div>
            <div class="col-md-4 text-left">
              <%= link_to image_tag(@artwork.user.patient_campaign.patient_image_1.thumb.url), [@artwork.patient_campaign], method: :get %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-5 font16">
              <p>Size: <%= @artwork.size %></p>
              <p>Category: <%= @artwork.category.capitalize %></p>
              <p>Medium: <%= @artwork.medium.capitalize %></p>  
              <p>Description: <%=@artwork.summary%></p>

<!-- owner's edit links               -->
              <% if can? :update, @artwork %>
                <%= link_to "Edit Artwork", edit_patient_campaign_artwork_path %>
                <% end %><br>

              <% if can? :destroy, @patient_campaign, @artwork %>
                <%= link_to "Delete Artwork", [@patient_campaign, @artwork,] , method: :delete, confirm: 'Are you sure you want to delete this Patient Campaign?' %>
              <% end %>

            </div>

<!-- for stripe checkout button -->
            <div class="col-md-6 text-right font16">
              <p>Price: <%= number_to_currency(@artwork.price) %><br>
              +Shipping/Handling: <%= number_to_currency(@artwork.shipping_price) %><br>
              <strong>Total (USD): <%= number_to_currency(@artwork.stripe_amount/100) %></strong></p>

              <br><br>
                <%= form_tag [@patient_campaign, @artwork, :buy] do %>
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="<%= @artwork.title %>",
                    data-amount="<%= @artwork.stripe_amount %>", 
                    data-image="<%= @artwork.art_image_1.thumb.url.html_safe %>",
                    data-label="Buy Now"
                    data-shipping-address=true>,
                    

                </script>
                <% end %>
            </div>
            </div>
          </div>

      

    </div>






  </div>
</div>