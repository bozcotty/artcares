<div class="container-fluid">

  <%= form_tag search_artworks_path, :method => :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %> <%= submit_tag "Search" %>
  </p>
  <% end %>

  <div class ="col-md-10 col-md-offset-1">
    <% @artworks.in_groups_of(3, false) do |row_tasks| %>
      
        <% for artwork in row_tasks %>
        <span class="img-margin">
          <%= link_to image_tag(artwork.art_image_1.medium.url), [artwork.patient_campaign, artwork] %>
          
        </span>
        <% end %>
     
     <br><br>
    <% end %>
 
  </div>
  
</div>