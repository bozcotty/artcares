<%= form_for @patient_campaign do |f| %>

      <div class="form-group"><%= f.label :campaign_name, "Name your Patient Campaign, (i.e. 'Mary's Cancer Fund' or 'Support for Bill's Back Surgery')" %>
        <%= f.text_field :campaign_name %></div>

      <div class="form-group"><%= f.label :patient_first_name, "First Name of Patient" %>
        <%= f.text_field :patient_first_name %></div>

      <div class="form-group"><%= f.label :patient_last_name, "Last Name of Patient" %>
        <%= f.text_field :patient_last_name %></div>

      <div class="form-group"><%= f.label :patient_street_address, "Patient's Street Address" %>
        <%= f.text_field :patient_street_address %></div>

      <div class="form-group"><%= f.label :patient_unit_number, "Patient's Apartment/Unit #" %>
        <%= f.text_field :patient_unit_number %></div>

      <div class="form-group"><%= f.label :patient_city, "Patient's City of Residence" %>
        <%= f.text_field :patient_city %></div>

      <div class="form-group"><%= f.label :patient_state, "Patient's State of Residence" %>
        <%= f.text_field :patient_state %></div>

      <div class="form-group"><%= f.label :patient_zip_code, "Patient's Zip Code" %>
        <%= f.text_field :patient_zip_code %></div>

      <div class="form-group"><%= f.label :patient_phone_number, "Patient's Phone Number" %>
        <%= f.text_field :patient_phone_number %></div>

      <div class="form-group"><%= f.label :artist_relationship_to_patient, "This person's relationship to you, the artist (friend, relative, neighbor, etc.) "%>
        <%= f.text_area :artist_relationship_to_patient, rows: 1 %></div>

      <div class="form-group"><%= f.label :patient_diagnosis, "Name the Patient's condition, diagnosis, or illness." %>
        <%= f.text_area :patient_diagnosis, rows: 1 %>
      <br><br>
      <div class="form-group"><%= f.label :patient_story, "Tell a brief, compelling story about your Patient. (i.e. what's special about this individual, what do they need help with?)" %>
        <%= f.text_area :patient_story, rows: 12%>

      <div class="form-group"><%= image_tag(@patient_campaign.patient_image_1.url) if @patient_campaign.patient_image_1? %>
        <br>
        <%= f.label :patient_image_1, "Upload a photo of your Patient (square format works best!)" %>
          <%= f.file_field :patient_image_1 %>
        <br><span class="cancel">delete photo</span></div>
        <br>
      <p><%= f.submit "Publish your Patient Campaign" %></p>
      
<%end%>