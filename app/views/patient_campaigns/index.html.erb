<div class="container-fluid">
  <div class="row" id="green-bg">

    <h2 class="copy-heading text-center" id="green-bg">Patient Campaigns</h2>

  </div>
 <!-- sunspot solr -->
  <%= form_tag patient_campaigns_path, :method => :get do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  <% end %> 

<% @patient_campaigns.each do |patient_campaign| %>
  <h4>
    <%= link_to patient_campaign.campaign_name, patient_campaign %>
  </h4>
  
  <p>Help <%= patient_campaign.patient_first_name %> deal with <%= patient_campaign.patient_diagnosis %>.</p>
<% end %>
<%= will_paginate @patient_campaigns %>

  
</div>