<div class="container-fluid">
  <div class="row" id="green-bg">

    <h2 class="copy-heading text-center" id="green-bg">Artists</h2>

  </div>
    
  <div class="center-div">
   
    
      <% @users.in_groups_of(3, false) do |row_tasks|%>

        <% for user in row_tasks %>
          <div class="index-capsule-user">
            
            <%= link_to image_tag(user.headshot.capsule.url), user %>
            <br>
            <span class="copy-heading">
              <h4><%= link_to (user.full_name), user %></h4>
              <%= link_to (user.type_of_artist), user %><br>
            </span>

              <%= (user.city) %>, <%= (user.state) %>

            <hr class="style-two">

            <div class="three-images">
              <% if user.sample_work_1 %>
              <%= link_to image_tag(user.sample_work_1.capsule.url), user %>
              <% end %>

              <% if user.sample_work_2 %>
              <%= link_to image_tag(user.sample_work_2.capsule.url), user %>
              <% end %>

              <% if user.sample_work_3 %>
              <%= link_to image_tag(user.sample_work_3.capsule.url), user %>
              <% end %>
            </div>
          </div>
        <% end %>

      <% end %>

  </div>
   
</div>
