<div class="container-fluid">
 <br>
<!-- artist headshot -->
  <div class="row">
    <div class="col-md-4">
     
      <p class="text-right"><%= image_tag @user.headshot %></p>
      
      <ul class="bot-align text-right">

        <li><%= image_tag(@user.sample_work_1) %> </li>
        <li><%= image_tag(@user.sample_work_2) %></li>
        <li><%= image_tag(@user.sample_work_3) %></li>
        
      </ul>
    </div>
    

<!-- artist info -->
    <div class="col-md-4">
    
        <!-- change the link to an artist view page, (to be made) -->
      <h2 class="copy-heading"><%= @user.full_name%></h2>
      <h3 class="copy-heading"><%= @user.type_of_artist %></h3>
      <h4 class="copy-heading"><%= @user.city %>, <%= @user.state %></h4>
      <hr>
      
      <p><strong>Artist Statement:</strong> <%= @user.artist_statement %></p>  
    </div>

<!-- patient campaign info -->
  
    <div class="col-md-4">
      <% if @patient_campaign %>
      <br>
        <h4 class="copy-heading">Artist's Patient: <%= @patient_campaign.full_name %></h4>
        <p>(Artist's <%= @patient_campaign.artist_relationship_to_patient %>)</p>

        <div class="row">
          <div class="col-md-4">
            <%= link_to image_tag(@patient_campaign.patient_image_1.small.url), patient_campaign_path %>
          </div>
          <div class="col-md-8">
            <h5 class="copy-heading"><%= @patient_campaign.campaign_name %></h5>
            <p><%= @patient_campaign.patient_story %></p>
           

      <% else %>
      <br>
          <p>This user does not have a patient campaign yet.</p> 
      <% end %>
        </div>
      </div>

    </div>
  </div> 
  <hr class="style-two"> 

  <!-- artist's sample images -->
  
 
  </div>
</div>